<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_registration_page"
    tools:context="com.kevin_miller.csit551.assignment3.RegistrationPage"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/new_background">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/reg_etUserName"
        android:hint="Enter a username"
        android:inputType="text" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/reg_etFullName"
        android:hint="Enter your name"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/reg_etDOB"
        android:hint="Enter your date of birth"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:inputType="date" />

    <Spinner
        android:id="@+id/reg_spnMajor"
        android:layout_width="fill_parent"
        android:spinnerMode="dialog"
        android:layout_height="wrap_content"
        android:entries="@array/major_array"
        >
    </Spinner>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/reg_etEmail"
        android:hint="Enter your MSU email"
        android:inputType="textEmailAddress" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/reg_etPass1"
        android:hint="Enter your password"
        android:inputType="textPassword" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/reg_etPass2"
        android:hint="Confirm  password"
        android:inputType="textPassword" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_btnRegister"
        android:text="Register"
        android:backgroundTint="#0FFF"/>

</LinearLayout>
