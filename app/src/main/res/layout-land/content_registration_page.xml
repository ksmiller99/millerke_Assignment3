<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kevin_miller.csit551.assignment3.RegistrationPage"
    tools:showIn="@layout/activity_registration_page">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/reg_etUserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:layout_weight="1"
            android:hint="Enter a username"
            android:inputType="text"/>

        <EditText
            android:id="@+id/reg_etFullName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:layout_weight="1"
            android:hint="Enter your name"
            android:inputType="textPersonName" />
    </LinearLayout>

    <!--<Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />-->


         <Spinner
            android:id="@+id/reg_spnMajor"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
             android:entries="@array/major_array"
            android:spinnerMode="dialog"></Spinner>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/reg_etDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1sp"
            android:layout_weight="1"
            android:focusable="false"
            android:hint="Enter your date of birth"
            android:inputType="date" />

        <EditText
            android:id="@+id/reg_etEmail"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:hint="Enter your MSU email"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/reg_etPass1"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:hint="Enter your password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/reg_etPass2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1sp"
            android:hint="Confirm  password"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/reg_btnRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0FFF"
        android:text="Register" />

</LinearLayout>
